{
    "app_name": "Arcade Games",
    "app_version": "1.0",
    "archive": [
        "main.py",
        "adventures_in_space.py",
        "santa_vs_grunch.py",
        "index.html",
        "assets/*"
    ],
    "requirements": [
        "pygame>=2.5.0",
        "asyncio>=3.4.3",
        "python-dotenv",
        "supabase"
    ],
    "main_script": "main.py",
    "serve": {
        "app_path": ".",
        "host": "localhost",
        "port": 8000
    },
    "build": {
        "target": "web",
        "flags": [
            "--preload-file",
            "assets"
        ]
    },
    "web": {
        "canvas_resize_policy": "scale_inner",
        "focus_leave_policy": "pause",
        "cache": true,
        "ume_block": false,
        "renderer": "webgl",
        "high_dpi": true
    }
}